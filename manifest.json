{
    "name": "__MSG_app_title__",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "__MSG_app_description__",
    "homepage_url": "https://github.com/chrisenytc/qrtme-chrome/",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        "icons/icon48.png"
    ],
    "default_locale": "en",
    "background": {
        "scripts": [
            "src/bg/background.js"
        ],
        "persistent": false
    },
    "options_page": "options/index.html",
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "QRtme",
        "default_popup": "src/browser_action/popup.html"
    },
    "permissions": [
        "tabs"
    ]
}
